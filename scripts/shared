prep_src() {
  mkdir -p src/github.com/cloudfoundry/service-logs-release/src/pkg
  cp -r vendor/* src/

  cp -r src/pkg src/github.com/cloudfoundry/service-logs-release/src
}

create_release() {
  local file=${1}
  bosh create-release --force --tarball ${file}
}

cleanup() {
  rm -rf src/github.com/cloudfoundry/service-logs-release
  rm -rf src/*.org
  rm -rf src/*.in
  rm -rf src/*.com
  rm -f src/modules.txt
}