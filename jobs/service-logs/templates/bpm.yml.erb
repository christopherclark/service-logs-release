processes:
- name: service-logs
  executable: /var/vcap/packages/service-logs/bin/fluent-bit
  args:
  - --config=/var/vcap/jobs/service-logs/config/fluentbit.conf
  - --plugin=/var/vcap/packages/service-logs/bin/out_loggregator.so
  unsafe:
    unrestricted_volumes:
    - path: /var/vcap/sys/log
      mount_only: true
