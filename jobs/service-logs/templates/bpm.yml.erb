processes:
- name: service-logs
  executable: /var/vcap/packages/fluent-bit/fluent-bit
  args:
  - --config=/var/vcap/jobs/service-logs/config/fluentbit.conf
  - --plugin=/var/vcap/packages/loggregator-output-plugin/out_loggregator.so
  additional_volumes:
  - path: /var/vcap/sys/log
    mount_only: true
  - path: /var/vcap/data/sys/log
    mount_only: true
